# Connect to the local Docker database defined in docker-compose.yml
DATABASE_URL="postgresql://postgres:password@localhost:5432/gitkarma?schema=public"

# NextAuth.js Secret (You can generate one with `openssl rand -base64 32`)
AUTH_SECRET="dummy_secret_for_local_dev"

# GitHub OAuth (Create a GitHub OAuth App to get these)
AUTH_GITHUB_ID="your_github_client_id"
AUTH_GITHUB_SECRET="your_github_client_secret"
